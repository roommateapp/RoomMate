<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_home_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:padding="2dp" >

        <TextView
            android:id="@+id/balance_interval_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:text="Calculate balance every:"
            android:textColor="#006837"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/balance_inner_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" >

            <EditText
                android:id="@+id/balnce_interval"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:inputType="numberSigned"
                android:textSize="18sp" >
            </EditText>

            <TextView
                android:id="@+id/balance_interval_txt_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/balnce_interval"
                android:layout_centerHorizontal="true"
                android:text="days"
                android:textColor="#006837"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/balance"
        android:layout_margin="1dp"
        android:background="#DADADC" >
    </View>

    <RelativeLayout
        android:id="@+id/bills"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/view3"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/bills_annonce_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:text="Notification of bill deadline:"
            android:textColor="#006837"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/bills_inner_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" >

            <EditText
                android:id="@+id/bills_notification_edit"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="numberSigned"
                android:textSize="18sp" >
            </EditText>

            <TextView
                android:id="@+id/bills_notification_txt_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bills_notification_edit"
                android:text="days before"
                android:textColor="#006837"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bills"
        android:layout_margin="1dp"
        android:background="#DADADC" >
    </View>

    <TextView
        android:id="@+id/home_location_txt"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@id/view4"
        android:background="@drawable/list_item_pressed"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:text="Set home location"
        android:textColor="#006837"
        android:textSize="18sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/home_location_txt"
        android:layout_margin="1dp"
        android:background="#DADADC" >
    </View>

    <TextView
        android:id="@+id/image_txt"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@id/view5"
        android:background="@drawable/list_item_pressed"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:text="Set home image"
        android:textColor="#006837"
        android:textSize="18sp" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/image_txt"
        android:layout_margin="1dp"
        android:background="#DADADC" >
    </View>

    <TextView
        android:id="@+id/invite_roommates"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@id/view6"
        android:background="@drawable/list_item_pressed"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:text="Invite roommates"
        android:textColor="#006837"
        android:textSize="18sp" />

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/invite_roommates"
        android:layout_margin="1dp"
        android:background="#DADADC" >
    </View>

    <Button
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view7"
        android:layout_centerHorizontal="true"
        android:text="Save changes" />

</RelativeLayout>