<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hhh"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/new_bill"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="14dp"
        android:hint="add new bill"
        android:inputType="textMultiLine" >
    </EditText>

    <Button
        android:id="@+id/add_bill"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/new_bill"
        android:drawableStart="@android:drawable/ic_menu_add" />

    <RelativeLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_bill"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bill_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="6dp"
            android:maxLines="1"
            android:padding="4dp"
            android:text="Bill name"
            android:textColor="#006837"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bill_ammount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:padding="4dp"
            android:text="Amount"
            android:textColor="#006837"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bill_due_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:padding="4dp"
            android:text="Due date"
            android:textColor="#006837"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
      <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/titles"
        android:layout_margin="1dp"
        android:background="#006837" >
    </View>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_margin="4dp" >
    </ListView>

</RelativeLayout>