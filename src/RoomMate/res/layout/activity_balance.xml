<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/balance_period_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:text="for period: " >
        </TextView>

        <TextView
            android:id="@+id/balance_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/balance_period_txt"
            android:text="01/08/2014" />

        <TextView
            android:id="@+id/balance_between"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/balance_start"
            android:text=" - " />

        <TextView
            android:id="@+id/balance_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/balance_between"
            android:text="today" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relativeLayout1"
        android:layout_margin="1dp"
        android:background="#DADADC" >
    </View>

    <!-- My balance -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="#A3C1AD"
            android:padding="4dp"
            android:text="My total" />

        <TextView
            android:id="@+id/my_bebt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="#ACE1AF"
            android:padding="4dp"
            android:text="4,000" />

        <TextView
            android:id="@+id/my_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="#A3C1AD"
            android:padding="4dp"
            android:text="900" />
    </LinearLayout>

    <!-- Other's balance -->

    <LinearLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/bill_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="4dp"
            android:text="Roommate:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bill_ammount_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="4dp"
            android:text="Debt:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bill_due_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="4dp"
            android:text="Credit:"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/titles"
        android:layout_marginBottom="1dp"
        android:background="#DADADC" >
    </View>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titles" >
    </ListView>

    <Button
        android:id="@+id/load_earlier_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Load previous balances" />

</RelativeLayout>