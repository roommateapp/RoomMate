<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/list_item_pressed"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/bill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="6dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="4dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bill_ammount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bill_name"
        android:layout_alignBottom="@+id/bill_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:gravity="center_vertical"
        android:padding="4dp" />

    <TextView
        android:id="@+id/bill_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bill_ammount"
        android:layout_alignBottom="@+id/bill_ammount"
        android:layout_alignParentRight="true"
        android:layout_margin="6dp"
        android:gravity="center_vertical" />

</RelativeLayout>