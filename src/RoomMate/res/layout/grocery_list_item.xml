<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grocery_list_item"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:focusable="true" 
    android:focusableInTouchMode="true"
    android:layout_gravity="center_vertical"
    android:background="#ffffff" >

    <EditText
        android:id="@+id/grocery_item"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/check_item"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:gravity="left"
        android:inputType="text"
        android:textAlignment="gravity"
        android:textColor="#006837" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/delete_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="X" />

    <CheckBox
        android:id="@+id/check_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/grocery_item"
        android:layout_alignBottom="@+id/grocery_item"
        android:layout_alignParentLeft="true" />

</RelativeLayout>